{
  "name": "ultraterrestrial",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "dev": "turbo dev --parallel",
    "dev:cli": "turbo dev --filter=@ultraterrestrial/cli",
    "dev:ui": "turbo dev --filter=@ultraterrestrial/ui",
    "dev:app": "turbo dev --filter=@ultraterrestrial/app",
    "dev:cms": "turbo dev --filter=@ultraterrestrial/cms",
    "dev:live": "turbo dev --filter=@ultraterrestrial/drawing-board",
    "build:app": "turbo build --filter=@ultraterrestrial/app",
    "dev:stream": "turbo dev --filter=@ultraterrestrial/agent-stream",
    "typecheck": "turbo typecheck",
    "new": "plop"
  },
  "packageManager": "bun@1.1.29",
  "dependencies": {
    "turbo": "^2.1.3",
    "typescript": "^5.6.2"
  }
}